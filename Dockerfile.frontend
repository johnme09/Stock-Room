FROM node:22
WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm i

# Copy frontend source code
COPY frontend/ ./

# Expose Vite port
EXPOSE 5173

# Default command (will be overridden by docker-compose)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]